<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context="com.example.chingizmammadli.newspaper.MainActivity">

    <EditText
        android:id="@+id/login_email"
        android:inputType="textEmailAddress"
        android:hint="@string/login_emailField_hint"

        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/login_password"
        android:inputType="textPassword"
        android:hint="@string/login_passwordField_hint"

        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/login_button"
        android:text="Login"
        android:background="@drawable/shape_with_corner_radius"
        android:textColor="@color/login_button_text_color"
        android:layout_gravity="right"

        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="50dp" />

    <TextView
        android:text="@string/social_login_header"
        android:textAlignment="center"

        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <GridLayout
        android:rowCount="1"
        android:columnCount="2"
        android:layout_width="match_parent"
        android:layout_height="70dp">



    </GridLayout>

</LinearLayout>
